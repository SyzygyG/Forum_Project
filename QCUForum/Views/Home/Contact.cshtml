@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contact";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Contact Us</h1>
        <p class="text-muted">We’re here to assist you. Reach out anytime!</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card text-bg-dark h-100">
                <div class="card-body">
                    <h5 class="card-title"><span class="badge bg-primary me-2">1</span>Email Us</h5>
                    <p class="card-text">
                        For general inquiries, please email us at:
                        <a href="mailto:qcuforumsupport@gmail.com" class="text-info">qcuforumsupport@gmail.com</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-bg-dark h-100">
                <div class="card-body">
                    <h5 class="card-title"><span class="badge bg-primary me-2">2</span>Follow Us</h5>
                    <p class="card-text">
                        Stay updated by following us on our social media channels:
                    </p>
                    <div class="mb-2">
                        <i class="bi bi-facebook"></i>
                        <a href="https://www.facebook.com/ErwinGamali" class="text-info">Facebook</a>
                    </div>
                    <div>
                        <i class="bi bi-instagram"></i>
                        <a href="https://www.instagram.com/QCUForum" class="text-info">Instagram</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-bg-dark h-100">
                <div class="card-body">
                    <h5 class="card-title"><span class="badge bg-primary me-2">3</span>Visit Us</h5>
                    <p class="card-text">
                        If you prefer to reach us in person, our office is located at:
                    </p>
                    <address>
                        QCU Forum Office<br />
                        123 Campus Drive,<br />
                        Quezon City, San Bartolome, 1116
                    </address>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-bg-dark h-100">
                <div class="card-body">
                    <h5 class="card-title"><span class="badge bg-primary me-2">4</span>Feedback</h5>
                    <p class="card-text">
                        We value your feedback and suggestions! Let us know how we can improve your experience.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
