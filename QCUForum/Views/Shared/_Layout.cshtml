<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QCU Forum</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="text-bg-dark" style="margin: 0;">

    <!-- Full-page flex container -->
    <div class="d-flex" style="height: 100vh; overflow: hidden;">

        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 position-sticky"
             style="width: 250px; background: linear-gradient(to right, #303030, #212529); color: white; border-right: 1px solid #495057;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none" style="border-right: 0px;">
                <img src="~/Assets/qcuforumlogo.png" alt="Alternate Text" style="max-width: 30%; height: auto; object-fit:contain;"/>
                <span class="fs-4 m-lg-2">QCU Forum</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Categories")" class="nav-link text-white hover-effect">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("About", "Home")" class="nav-link text-white hover-effect">
                        <i class="bi bi-info-circle"></i> About
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Faq", "Home")" class="nav-link text-white hover-effect">
                        <i class="bi bi-question-circle"></i> FAQ
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Contact", "Home")" class="nav-link text-white hover-effect">
                        <i class="bi bi-telephone"></i> Contact
                    </a>
                </li>
            </ul>
            <hr>
            <footer class="text-center mt-4">
                <small>© 2024 QCU Forum</small>
                <div class="mt-2">
                    <a href="@Url.Action("Login", "Admin")" class="btn btn-light btn-sm" style="border-radius: 50%;">
                        <i class="bi bi-shield-lock-fill"></i>
                    </a>
                </div>
            </footer>

        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 overflow-auto" style="padding: 20px;">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>
<style>
    /* Sidebar link hover effect */
    .nav-link {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .nav-link.hover-effect:hover {
            background-color: #495057; /* Darker gray background */
            color: #f8f9fa; /* Slightly lighter text color */
        }

    /* Sidebar border */
    .d-flex {
        border-right: 1px solid #495057; /* Thin border to separate sidebar */
    }
</style>
