@model QCUForum.Models.DashboardStats

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Dashboard</h1>
        <!-- Logout Button -->
        <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger btn-sm">Logout</a>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-bg-dark shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Total: @Model.CategoryCount</p>
                    <a href="@Url.Action("ManageCategories", "Admin")" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-dark shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Threads</h5>
                    <p class="card-text">Total: @Model.ThreadCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-dark shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Posts</h5>
                    <p class="card-text">Total: @Model.PostCount</p>
                </div>
            </div>
        </div>
    </div>
</div>
